<h4>Item Lists</h4><hr />
<table class="table table-bordered" style="margin-bottom:30px!important;border:2px solid black;">
    <tr class="child_tr">
        <th>#</th>
        <th>L/C No.</th>
        <th>Quantity</th>
        <th>Location</th>
    </tr>
    @foreach (var data in importLocation)
    {
        count++;
        <tr class="child_tr">
            <td>@count.</td>
            <td>@Model.L_C</td>
            <td>@data.Quantity @Model.UnitName</td>
            <td>@data.AssignLocation</td>
        </tr>
    }
</table>