@model FactoryManagement.Models.View_Import_History_Details
@{
    ViewBag.Title = "Print Import History";
    Layout = "~/Views/Shared/_Layout.cshtml";
    FactoryManagement.Models.FactoryManagementEntities db = new FactoryManagement.Models.FactoryManagementEntities();
    var Fact_Info = db.FactoryInformations.FirstOrDefault();
    var importLocation = db.View_Import_Item_Details.Where(x => x.ImportId == Model.ImportId).ToList();
    var userId = Convert.ToInt64(Request.Cookies["CookieAdminInfo"].Values["userid"]);
    var count = 0;
}
<style>
    .headClass {
        margin-bottom: 20px;
    }
</style>

<div class="row headClass">
    <div class="col-md-12">
        <div class="col-xs-4 col-lg-4" style="float:left;text-align:left;">
            <div class="row">
                <div class="col-xs-12">
                    <span><img src="~/Images/Logo/GSML B&W LOGO.png" /></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    Generated By:
                    <span>@Request.Cookies["CookieAdminInfo"].Values["username"].ToString()</span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <span>Generated Date: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</span>
                </div>
            </div>

        </div>
        <div class="col-lg-4 col-xs-4" style="text-align:center;">
            <div class="row">
                <div class="col-xs-12">
                    <h4>Import Item Details</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <span>@Fact_Info.Name.Split('(')[0]</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-xs-4" style="text-align:right;margin-top:-10px;">
            <div class="row">
                <div class="col-xs-12">
                    <h2><small>@Model.VoucherName</small></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <span>
                        @if (Model.ProductName != null)
                        {
                           <span>@Model.ProductName</span> 
                        }
                        else
                        {
                            <apan>Product Name Unavailable</apan>
                        }
                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <span>
                        @Model.InsertedByUserName
                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <span>
                        @Model.InsertedDateFormat
                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <span>
                        @Model.Quantity @Model.UnitName                        
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

