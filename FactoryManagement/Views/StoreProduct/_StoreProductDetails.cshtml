                        <div class="col-lg-7 col-md-7 col-sm-6 col-xs-6" style="padding-top:7px;">
                            @Html.DisplayFor(model => model.Model, new { htmlAttributes = new { @class = "form-control k-textbox col-lg-2 col-md-2" } })
                        </div>
                    </div>
                }
