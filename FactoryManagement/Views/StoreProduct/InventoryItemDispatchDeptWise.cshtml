        var win_dept_history = $("#win_dept_history").data("kendoWindow");
        win_dept_history.refresh({ url: "/StoreProduct/ShowInvenDispacthDeptDetails?deptid=" + deptid });
        win_dept_history.center().open();
    });
</script>
