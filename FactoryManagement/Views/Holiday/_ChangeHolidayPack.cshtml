

<div class="editor-label"><label>Holiday Package</label></div>
<div class="editor-field">
    @(Html.Kendo().DropDownList().Name("HolidayPackId")
                 .OptionLabel("--Select One Package--")
                 .BindTo(ViewBag.HolidayPackId as SelectList)
                 .Events(e => e.Change("onChangeHolyPack"))
                 .HtmlAttributes(new { style = "width:100%" })
    )
    <span class="field-validation-valid text-danger" data-valmsg-for="HolidayPackId" data-valmsg-replace="true"></span>
</div>
<div id="div_selected_holy_pck"></div>
<script>
    $(document).ready(function () {
        $("#div_selected_holy_pck").load('@Url.Action("selectHolyPack","Holiday")?id=' + '@(ViewBag.packId)' + "&v=win");
        $("#btn_holy_pck_change").prop('disabled', true);
    });
</script>