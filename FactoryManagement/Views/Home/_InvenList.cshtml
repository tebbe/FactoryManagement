

@model IEnumerable<FactoryManagement.Models.View_All_InventoryList>
@{
    int count = 1;
}
@if (Model.Count() > 0)
{
    <table class="table bootstrap-datatable datatable small-font dataTable no-footer" id="DataTables_Table_0" role="grid">
        <thead>
            <tr role="row">
                <th>SI.NO</th>
                <th>Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var list in Model)
            {
                <tr role="row">
                    <td>@count.</td>
                    <td><a href="/StoreProduct/StoreProductDetails?id=@list.InventoryId"><span style="cursor:pointer;color:#428bca;">@list.ProductName</span></a></td>
                    <td>@list.Quantity @list.UnitName</td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}
else
{
    <p>There is no record to display....</p>
}
