@model IEnumerable<FactoryManagement.Models.View_Busi_Details_ForClient>
@{
    int count = 1;
    int supCount = 1;
}
@if (Model.Count() > 0)
{
    <table class="table bootstrap-datatable datatable small-font dataTable no-footer" id="DataTables_Table_0" role="grid">
        <thead>
            <tr role="row">
                <th>#</th>
                <th>Order Name</th>
                <th>Client Name</th>
                <th>Progress</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var list in Model)
            {
                var per = 0;
                <tr role="row">
                    <td>@count.</td>
                    <td class="sorting_1">
                        <span style="color:#1985ac;cursor:pointer;" class="bus_ord_name" data-id="@list.BusinessOrderId">@list.OrderName</span>
                    </td>
                    <td>
                        <a href="/CRMClient/DisplayClientInformation?Id=@list.ClientId">@list.ClientName</a>
                    </td>
                    @if (list.OrderStatus == 0)
                    {
                        <td class="">
                            <div class="progress thin">
                                <div class="progress-bar progress-bar-warning"
                                     role="progressbar" aria-valuenow="@per"
                                     aria-valuemin="0" aria-valuemax="100"
                                     style="width: @per%">
                                    <span class="sr-only">@per% Complete (success)</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-center text-warning">
                            Pending
                        </td>
                    }
                    else if (list.OrderStatus == 1)
                    {
                        per = 20;
                        <td class="">
                            <div class="progress thin">
                                <div class="progress-bar progress-bar-success"
                                     role="progressbar" aria-valuenow="@per"
                                     aria-valuemin="0" aria-valuemax="100"
                                     style="width: @per%">
                                    <span class="sr-only">@per% Complete (success)</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-center text-success">
                            Approved
                        </td>
                    }
                    else if (list.OrderStatus == 2)
                    {
                        per = 40;
                        if (list.HasSpec == "1")
                        {
                            per = 60;
                        }
                        <td class="">
                            <div class="progress thin">
                                <div class="progress-bar progress-bar-info"
                                     role="progressbar" aria-valuenow="@per"
                                     aria-valuemin="0" aria-valuemax="100"
                                     style="width: @per%">
                                    <span class="sr-only">@per% Complete (success)</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-center text-info">
                            In production
                        </td>
                    }
                    else if (list.OrderStatus == 3)
                    {
                        <td class="">
                            <div class="progress thin">
                                <div class="progress-bar progress-bar-success"
                                     role="progressbar" aria-valuenow="95"
                                     aria-valuemin="0" aria-valuemax="100"
                                     style="width: 100%">
                                    <span class="sr-only">100% Complete (success)</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-center text-success">
                            Complete
                        </td>
                    }
                    else if (list.OrderStatus == -1)
                    {
                        per = 20;
                        <td class="">
                            <div class="progress thin">
                                <div class="progress-bar progress-bar-danger"
                                     role="progressbar" aria-valuenow="@per"
                                     aria-valuemin="0" aria-valuemax="100"
                                     style="width: @per%">
                                    <span class="sr-only">@per% Complete (success)</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-center text-danger">
                            Canceled
                        </td>
                    }
                </tr>
                    count++;
            }
        </tbody>
    </table>
}
else{
    <p>There is no record to diaplay....</p>
}