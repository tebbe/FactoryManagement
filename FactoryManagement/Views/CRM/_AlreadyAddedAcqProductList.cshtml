@model FactoryManagement.ModelView.Acquisition.AcquisitionViewModel
@{
    var count = 1;
}
<style>
    #tbl_required_item_lists td{
        border:none!important;
    }
    #tbl_required_item_lists th{
        border:none!important;
    }
</style>

<table class="table" id="tbl_required_item_lists">
    <tr>
        <th width="5%">#</th>
        <th width="70%">Item Name</th>
        <th width="15%">Quantity</th>
    </tr>
    @foreach (var item in ViewBag.AcqProductName as IEnumerable<FactoryManagement.Models.View_All_AcquisitionList>)
    {
        <tr>
            <td>@count .</td>
            <td>@item.ProductName</td>
            <td>
            @if (item.OrderStatus == 1)
            {
                <span style="color:green;">
                    <span id="quentityInArrow_@item.AcquisitionId"
                          data-id="@item.AcquisitionId"
                          data-quantity="@item.Quantity"
                          style="margin-right:10px;">
                        @item.Quantity @item.UnitName
                    </span>
                </span>
            }
            else
            {
                <span >
                    <span id="quentityInArrow_@item.AcquisitionId"
                          data-id="@item.AcquisitionId"
                          data-quantity="@item.Quantity"
                          style="margin-right:10px;">
                        @item.Quantity @item.UnitName
                    </span>
                </span>
            }</td>
        </tr>
        count++;
    }
</table>
