@model IEnumerable<FactoryManagement.ModelView.CRM.BusinessOrderListModelView>
@{
    var count = 1;
}
<div class="row">
    <div class="col-xs-12">
        <table class="table table-bordered">
            <tr></tr>
            <tr>
                <th>#</th>
                <th>Order Name</th>
                <th>Ordered By</th>
                <th>Created Date</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>
                        <a href="/CRM/OrderDetails?BusinessOrderId=@item.BusinessOrderId&OrderType=@item.OrderType">
                            @Html.DisplayFor(modelItem => item.OrderName)
                        </a>
                    </td>

                    <td><a href="/CRMClient/DisplayClientInformation?Id=@item.ClientId">@Html.DisplayFor(modelItem => item.ClientName)</a></td>
                    <td>@Convert.ToDateTime(item.CreatedDate).ToString("MMMM dd,yyyy")</td>
                    <td>
                        <span class="k-icon k-i-pencil EditBusinessOrder" id="EditBusinessOrder-@item.BusinessOrderId" data-id="@item.BusinessOrderId"></span>
                        <a class="fa fa-trash deleteOrder" data-id="@item.BusinessOrderId"></a>
                        <a href="/CRM/OrderDetails?BusinessOrderId=@item.BusinessOrderId&OrderType=@item.OrderType"><span class="fa fa-info-circle"></span></a>
                    </td>
                </tr>
                count++;
            }
        </table>
    </div>
</div>
