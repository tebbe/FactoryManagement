                        '<span id="btnForSiteUnitEdit" style="padding-left:2%"><i class="k-icon k-i-pencil"></i></span></dd>'+
                    '<dt>Unit Status</dt>'+
                    ((data.UnitStatus==1)?'<dd><span>Active</span></dd>':'<dd><span>Inactive</span></dd>')+
