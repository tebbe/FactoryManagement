@model FactoryManagement.Models.View_UserLists
@{
    FactoryManagement.Models.FactoryManagementEntities db = new FactoryManagement.Models.FactoryManagementEntities();
    var nationality = db.CountryLists.Where(x => x.CountryCode == Model.Nationality).Select(x => x.Nationality).FirstOrDefault();
}
<style>
    #divforbasicinfodisplay .control-label {
        text-align: right !important;
    }
</style>
<link href="~/Content/Employee/profile.css" rel="stylesheet" />
<div style="width:98%;margin:0 auto">
<div class="row profile">
    <div class="col-md-2 col-sm-3">
        <div class="profile-sidebar">
            <div class="profile-userpic">
            
                @if (Model.Picture != null)
                {
                    <span id="Edit_Picture"><img src="~/Images/UserPicture/Original/@Model.Picture" class="img-responsive" alt=""></span>
                }
                else
                {
                    <span id="Edit_Picture"><img src="~/Images/Icon/blank-person.jpg" class="img-responsive" alt=""></span>
                }
            </div>
            <div class="profile-usertitle">
                <div class="profile-usertitle-name">@Model.UserName</div>
                <div class="profile-usertitle-job">@Model.DesignationName</div>
            </div>           
        </div>
    </div>
    <div class="col-md-10 col-sm-9">
        <div class="profile-content" id="div_ryt_panel" style="border:none">
            <h3 style="margin-left:20px">
                Personal Information
            </h3><hr />

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 row">
                <div class="form-horizontal form-widgets col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, "User Name", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DesignationName, "Designation", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @Html.DisplayFor(model => model.DesignationName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EmpId, "Employee Id", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @Html.DisplayFor(model => model.EmpId, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.JoinDate, "Joining Date", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @(((DateTime)Model.JoinDate).ToString("MMMM dd,yyyy"))
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DateOfBirth, "Date of Birth", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @(((DateTime)Model.DateOfBirth).ToString("MMMM dd,yyyy"))
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nationality, "Nationality", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                           @nationality
                        </div>
                    </div>
                    @if (Model.NationalId != null)
                    {
                        <div class="form-group">

                            @Html.LabelFor(model => model.NationalId, "National Id No", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">

                                @if (Model.NationalIdFontImg != null || Model.NationalIdBackImg != null)
                                {
                                    @Html.DisplayFor(model => model.NationalId, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                                }
                                else
                                {
                                    @Html.DisplayFor(model => model.NationalId, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                                }
                            </div>
                        </div>
                    }
                    @if (Model.EmailAddress != null)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.EmailAddress, "E-mail", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                                @Html.DisplayFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                            </div>
                        </div>
                    }
                </div>
                <div class="form-horizontal form-widgets col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserTypeName, "User Type", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @Html.DisplayFor(model => model.UserTypeName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SiteName, "Site", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @Html.DisplayFor(model => model.SiteName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                        </div>
                    </div>

                    @*@if (Model.UnitId != null)
                        {
                            <div class="form-group">
                                @Html.LabelFor(model => model.UnitId, "Unit", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                                <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                                    @Html.DisplayFor(model => model.UnitIdName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                                </div>
                            </div>
                        }*@
                    <div class="form-group">
                        @Html.LabelFor(model => model.DeptName, "Department", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @Html.DisplayFor(model => model.DeptName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                        </div>
                    </div>
                    @if (Model.UserType == 2 && Model.LineId != null)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.LineId, "Line", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                                @Html.DisplayFor(model => model.LineId, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                            </div>
                        </div>
                    }
                    @if (Model.UserType == 2 && Model.MachineId != null)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.MachineId, "Machine", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                                @Html.DisplayFor(model => model.MachineId, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(model => model.Gender, "Gender", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @*@Html.DisplayFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control k-textbox" } })*@
                            @if (Model.Gender == 1)
                            {
                                <span class="dis_info">Male</span>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ReligionName, "Religion", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @Html.DisplayFor(model => model.ReligionName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone, "Phone Number", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                        <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                            @Html.DisplayFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                        </div>
                    </div>
                    @if (Model.MobileNo != null)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.MobileNo, "Mobile Number", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
                            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                                @Html.DisplayFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
 
</div>


