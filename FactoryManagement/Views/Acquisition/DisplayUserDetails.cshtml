@model FactoryManagement.ModelView.HR.UserInformationModelView
@using FactoryManagement.Helpers
<style>
    .dis_info{
        margin-top:2px;
    }
</style>
<div class="row" style="width:95%!important;margin:0 auto">
    <div class=" form-horizontal" style="margin:3px!important;">
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, "User Name", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                <img src="~/Images/UserPicture/thumb/@Model.Picture" class="user-photo" />
                @if (Model.TitleName != null)
                {
                    @Html.DisplayFor(model => model.TitleName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                }
               
                @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                <a href="@Html.EncodedParam("DisplayEmployeeDetails", "HumanResource", new { UserId = Model.UserId, isDisplay = true }, null)" target="_blank" data-toggle="tooltip" data-placement="right" title="User complete profile"><i class="fa fa-info-circle"></i></a>
             </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateOfBirth, "Date of Birth", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                @(((DateTime)Model.DateOfBirth).ToString("MMMM dd,yyyy"))
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GenderName, "Gender", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                @Html.DisplayFor(model => model.GenderName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Nationality, "National", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                @Html.DisplayFor(model => model.Nationality, new { htmlAttributes = new { @class = "form-control k-textbox" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EmailAddress, "E-mail", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                @Html.DisplayFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control k-textbox" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Phone, "Mobile Number", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                @Html.DisplayFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control k-textbox" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Designation, "Designation", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                @Html.DisplayFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control k-textbox" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UserTypeName, "User Type", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
            <div class="col-md-6 col-sm-7 col-xs-8 dis_info" style="padding-top:7px">
                @Html.DisplayFor(model => model.UserTypeName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
            </div>
        </div>
    </div>

</div>
<script>
    $('[data-toggle="tooltip"]').tooltip();
</script>
