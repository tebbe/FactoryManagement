@model FactoryManagement.ModelView.Acquisition.AcquisitionViewModel
@{
    var count = 1;
}
<div class="form-group">
    <div class="col-md-12 col-sm-12" style="font-weight:700;">
        @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { } })
        <span style="float:right" class="fa fa-close" data-id="@Model.AcquisitionOrderId" id="btnForRemoveAcquisition"></span>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th style="text-align:center">Product Lists</th>
    </tr>
    @foreach (var item in ViewBag.AcqProductName as IEnumerable<FactoryManagement.Models.View_All_AcquisitionList>)
    {
        <tr>
            <td>
                <span>@count .</span>  @item.ProductName
                <span style="float:right">
                    <span id="quentityInArrow_@item.AcquisitionId" 
                          data-id="@item.AcquisitionId" 
                          data-quantity="@item.Quantity" 
                          style="margin-right:10px;">@item.Quantity @item.UnitName
                    </span> 
                    <span class="fa fa-pencil-square-o btnForEditProduct" data-acquisitionid="@item.AcquisitionId"></span>
                    <span class="fa fa-close btnForRemoveProduct" data-acquisitionid="@item.AcquisitionId" data-acquisitionorderid="@item.AcquisitionOrderId"></span>
                </span>
            </td>
        </tr>
        count++;
    }
</table>