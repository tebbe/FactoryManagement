                              .Name("multiselectSearch")
                              .DataTextField("Name")
                              .DataValueField("VoucherId")
                              .Placeholder("Start typing name")
                              .Events(e => e.Change("onSearchChange"))
                              .AutoClose(false)
                              .DataSource(source =>
                              {
                                  source.Read(read =>
                                  {
                                      read.Action("SearchIndentVoucherList", "Acquisition").Data("additionalInfo");

