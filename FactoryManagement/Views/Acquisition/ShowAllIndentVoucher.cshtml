    $("#tab1AllList,#tab2PendingList").on("click", ".btn_app_indent_voucher", function () {
        var id = $(this).data("id");
        var kendoWindow = $("<div/>").kendoWindow({
            actions: ["Close"],
            title: "Alert",
            resizable: false,
            width: "30%",
            modal: true,
            close: onWindowClose
        });
