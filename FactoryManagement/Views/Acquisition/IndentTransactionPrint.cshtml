@model FactoryManagement.Models.View_Indent_Transaction
@{
    ViewBag.Title = "Indent Transaction Print";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = Convert.ToInt64(Request.Cookies["CookieAdminInfo"].Values["userid"]);
    FactoryManagement.Models.FactoryManagementEntities db = new FactoryManagement.Models.FactoryManagementEntities();
    var fact_info = db.FactoryInformations.FirstOrDefault();
}

<style>
        .headClass {
            margin-bottom: 20px;
        }
    </style>

    <div class="row headClass">
        <div class="col-md-12">
            <div class="col-xs-4 col-lg-4" style="float:left;text-align:left;">
                <div class="row">
                    <div class="col-xs-12">
                        <span><img src="~/Images/Logo/GSML B&W LOGO.png" /></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        Generated By:
                        <span>
                            @if (userId > 0)
                            {
                                <span>@db.View_UserLists.Where(m => m.UserId == userId).Select(m => m.UserName).FirstOrDefault()</span>
                            }
                            else
                            {
                                <span>Super Admin</span>
                            }
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span>Generated Date: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-xs-5" style="text-align:center;">
                <div class="row">
                    <div class="col-xs-12">
                        <h4>Indent Transaction Details</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span>@fact_info.Name.Split('(')[0]</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-xs-3" style="text-align:right;">
                <div class="row" style="margin-top:-12px;">
                    <div class="col-xs-12">
                        <h2><small>@Model.TransactionName</small></h2>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <span>
                            @if (Model.InsertedBy != null)
                            {
                                if (Model.InsertedBy > 0)
                                {
                                    <span>@Model.InsertedUserName</span><br />
                                }
                                else
                                {
                                    <span>Super Admin</span><br />
                                }
                            }
                            else
                            {
                                <span>Inserted By Undefined</span><br />
                            }
                            
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <span>
                            @if (Model.InsertedBy != null)
                            {
                                <span>@Convert.ToDateTime(Model.InsertedDate).ToString("MMM dd,yyyy hh:mm tt")</span><br />
                            }                          
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div class="portlet light bordered">
    <div class="portlet-body form">
        <div class="form-horizontal">
            <div class="form-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th width="17%" style="font-weight:500!important;">Name</th>
                            <th width="10%" style="font-weight:500!important;">Voucher Name</th>
                            <th width="10%" style="font-weight:500!important;">Item Name</th>
                            <th width="10%" style="font-weight:500!important;">Request Qty</th>
                            <th width="10%" style="font-weight:500!important;">Received Qty</th>
                            <th width="10%" style="font-weight:500!important;">Inserted By</th>
                            <th width="20%" style="font-weight:500!important;">Inserted Date</th>
                        </tr>
                        <tr>
                            <td>@Model.TransactionName</td>
                            <td>@Model.Name</td>
                            <td>@Model.ProName</td>
                            <td>@Model.Required_Qty @Model.UnitName</td>
                            <td>@Model.Quantity @Model.UnitName</td>
                            <td><img class="img-circle" src="/Images/UserPicture/thumb/@Model.InsertedUserPic">@Model.InsertedUserName</td>
                            <td>@Model.InsertedDateName</td>
                           
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

