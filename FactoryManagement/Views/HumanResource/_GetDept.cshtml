

@if (ViewBag.pageType == "win")
{
    <div class="editor-label"><label for="DeptId">Department</label></div>
    <div class="editor-field">
        @(Html.Kendo().DropDownList()
                                 .Name("Partial_DeptId")
                                 .DataTextField("DeptName")
                                 .DataValueField("DeptId")
                                 .OptionLabel("--Select Department--")
                                 .Events(e => e.Change("onDepartmentchange"))
                                 .BindTo(ViewBag.DeptId)
                                 .HtmlAttributes(new { style = "width:100%" })
        )
        <span class="field-validation-valid text-danger" data-valmsg-for="Partial_DeptId" data-valmsg-replace="true"></span>
    </div>
    <script>
        var Partial_DeptId = $("#Partial_DeptId").data("kendoDropDownList");
        Partial_DeptId.value('@(ViewBag.seletedDeptId)');
    </script>
}
else
{
    <div class="form-group">
        @Html.Label("Department", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
        <div class="col-md-6 col-sm-7 col-xs-8">
            @(Html.Kendo().DropDownList()
                                  .Name("DeptId")
                                  .DataTextField("DeptName")
                                  .DataValueField("DeptId")
                                  .OptionLabel("--Select Department--")
                                  .Events(e => e.Change("onDepartmentchange"))
                                  .BindTo(ViewBag.DeptId)
                                  .HtmlAttributes(new { style = "width:100%" })
            )

        </div>
    </div>
    <span class="field-validation-valid text-danger" data-valmsg-for="DeptId" data-valmsg-replace="true"></span>
}
