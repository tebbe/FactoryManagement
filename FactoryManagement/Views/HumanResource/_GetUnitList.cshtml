


@if (ViewBag.pageType == "win")
{
    <div class="editor-label"><label for="UnitId">Unit</label></div>
    <div class="editor-field">
        @(Html.Kendo().DropDownList().Name("Partial_UnitId")
        .DataTextField("UnitName").DataValueField("UnitId")
        .OptionLabel("--Select Unit--")
        .Events(e => e.Change("onChangeUnit"))
        .BindTo(ViewBag.UnitId)
        .HtmlAttributes(new { style = "width:100%" })
        )
        <span class="field-validation-valid text-danger" data-valmsg-for="Partial_UnitId" data-valmsg-replace="true"></span>
    </div>
    <script>
        var Partial_UnitId = $("#Partial_UnitId").data("kendoDropDownList");
        Partial_UnitId.value('@(ViewBag.seletedUnitId)');
    </script>
}
else
{
    <div class="form-group">
        @Html.Label("Unit", htmlAttributes: new { @class = "control-label col-md-4 col-sm-5 col-xs-12" })
        <div class="col-md-6 col-sm-7 col-xs-8">
            @(Html.Kendo().DropDownList().Name("UnitId")
            .DataTextField("UnitName").DataValueField("UnitId")
            .OptionLabel("--Select Unit--")
            .Events(e => e.Change("onChangeUnit"))
            .BindTo(ViewBag.UnitId).HtmlAttributes(new { style = "width:100%" })
            )
            <span class="field-validation-valid text-danger" data-valmsg-for="UnitId" data-valmsg-replace="true"></span>
        </div>
    </div>
}

