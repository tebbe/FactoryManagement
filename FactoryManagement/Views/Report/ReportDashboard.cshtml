
@{
    ViewBag.Title = "ReportDashboard";
    Layout = "~/Views/Shared/_LayoutPagedashboard.cshtml";
}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/Home/Dashboard">Dashboard</a>
        </li>
    </ul>
</div>
<h3 class="page-title">Dashboard <small>reports</small></h3>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat blue-madison">
            <div class="visual"><i class="fa fa-building"></i></div>
            <div class="details">
                <div class="number">Daily Raw Cotton Stock</div>
                @*<div class="desc">No. of machines in used</div>*@
            </div>
            <a class="more" href="/Report/DailyRawCottonStock">
                View more <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat yellow">
            <div class="visual"><i class="fa fa-bug"></i></div>
            <div class="details">
                <div class="number">Monthly Report Generator</div>
                @*<div class="desc">No. of unassigned machines</div>*@
            </div>
            <a class="more" href="/StoreProduct/Invenlist">
                View more <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat grey-cascade">
            <div class="visual"><i class="fa fa-bug"></i></div>
            <div class="details">
                <div class="number">Manually Waste List</div>
               @* <div class="desc">Maintenance in last 7 Days</div>*@
            </div>
            <a class="more" href="/StoreProduct/WasteList">
                View more <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    </div>
<script>
    $(document).ready(function () {
        $("#liForInventory").addClass('active');
        $("#liForInvenReport").addClass("sublistActive");
    });
</script>

