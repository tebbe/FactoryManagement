@using FactoryManagement.Helpers;
@model IEnumerable<FactoryManagement.Models.View_DisItemReturnDetails>
@{
    int count = 0;
    FactoryManagement.Models.FactoryManagementEntities db = new FactoryManagement.Models.FactoryManagementEntities();
}

@if (Model.Count() > 0)
{
    <style>
        #tbl_re_parts_list{width:85%!important;margin-left:5%!important;}
        #tbl_re_parts_list th{border:none!important;}
        #tbl_re_parts_list td{border:none!important;}
    </style>
    <table class="table table-condensed" id="tbl_re_parts_list">
        <tr>
            <th width="5%">#</th>
            <th width="30%">Name</th>
            <th width="10%">Quantity</th>
            <th width="30%">Return By</th>
            <th width="25sw%">Return Date</th>
        </tr>
        @foreach (var list in Model)
        {
            count++;
            <tr>
                <th>@count.</th>
                <td>@list.ProductName</td>
                <td>@list.Quantity @list.UnitName</td>
                <td>@list.ReturnUserName</td>
                <td>@list.ReturnDateName</td>
            </tr>
        }
    </table>
}
else
{
    <center><label>There is no record to display.....</label></center>
}

