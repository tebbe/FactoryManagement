@model IEnumerable<FactoryManagement.Models.View_DisItemReturnDetails>
    @{ int count = 0;}
    
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>SL</th>
                <th>Product Name</th>
                <th>Total Reurned Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var list in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@list.ProductName</td>
                    <td>
                        <span class=show_vouchers data-inventoryid="@list.InventoryId" style="color:#0094ff;cursor:pointer">
                            @list.Quantity
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
<h4>There is no record to display</h4>
}
