

@model FactoryManagement.ModelView.Inventory.MachineTypeModelView

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Machine Details</h2>
    </div>
    <div class="panel-body">
        <div id="Div_Machine_Dis" class="form-horizontal col-sm-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-7" style="padding-top:7px;">
                    @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MachineAcronym, "Acronym", htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-4" style="padding-top:7px;">
                    @Html.DisplayFor(model => model.MachineAcronym, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MachineType, "Type", htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-4" style="padding-top:7px;">
                    @Html.DisplayFor(model => model.MachineTypeName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ModelName, "Model", htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-4" style="padding-top:7px;">
                    @Html.DisplayFor(model => model.ModelName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CountryOfOrigin, "Country of Origin", htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-4" style="padding-top:7px;">
                    @Html.DisplayFor(model => model.CountryOfOrigin, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
        </div>
        <div id="Div_Machine_Edit" class="form-horizontal col-sm-12">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-7" style="padding-top:7px;">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MachineAcronym, "Acronym", htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-4" style="padding-top:7px;">
                    @Html.EditorFor(model => model.MachineAcronym, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MachineType, "Type", htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-4" style="padding-top:7px;">
                    @Html.EditorFor(model => model.MachineTypeName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ModelName, "Model", htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-4" style="padding-top:7px;">
                    @Html.EditorFor(model => model.ModelName, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CountryOfOrigin, "Country of Origin", htmlAttributes: new { @class = "control-label col-md-4 col-sm-4" })
                <div class="col-md-6 col-sm-4" style="padding-top:7px;">
                    @Html.EditorFor(model => model.CountryOfOrigin, new { htmlAttributes = new { @class = "form-control k-textbox" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-7 col-sm-offset-4 col-sm-7">
                    <input type="button" value="Update" class="btn green" id="btnMachineInfoEdit" />
                    <input type="reset" value="Refresh" class="btn default" id="btnMachineInfoRefresh" />
                    <input type="button" value="Cancel" class="btn default" id="btnMachineInfoEditCancel" />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".panel-body").css({ "height": panel_height });
        $("#Div_Machine_Edit").hide();
    });
    
    $("#btn_machine_edit").click(function () {
        $("#Div_Machine_Edit").show();
        $("#Div_Machine_Dis").hide();
        $("#btn_machine_edit").hide();
    });
    $("#btnMachineInfoEdit").click(function () {
        $("#Div_Machine_Edit").hide();
        $("#Div_Machine_Dis").show();
        $("#btn_machine_edit").show();
    });
    $("#btnMachineInfoEditCancel").click(function () {
        $("#Div_Machine_Edit").hide();
        $("#Div_Machine_Dis").show();
        $("#btn_machine_edit").show();
    });
</script>