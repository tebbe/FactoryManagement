        $("#top_header_link").append('<span><a href="/Home/InvenDashboard">Dashboard</a></span><span><i class="fa fa-angle-right fa-2x"></i></span>' +
            '<span><a href="/StoreProduct/FinishedProList"> All Finished Product List </a><span><i class="fa fa-angle-right fa-2x"></i></span>' +
           '<span class="current">Add New</span>');

        $("#txtPro_1").kendoAutoComplete({
            dataTextField: "Count_Name",
            filter: "contains",
            minLength: 2,
            select: function onSelectCount(e) {
                var dataItem = this.dataItem(e.item.index());
                $("#lbl_Count_Name_1").text(dataItem.Count_Name);
                $("#span_for_entry_count_1").hide();
                $("#span_dis_count_1").show();
                $("#txtPro_1").data("val", dataItem.Id);
